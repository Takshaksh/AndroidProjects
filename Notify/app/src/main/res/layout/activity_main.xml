<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkish"
    android:padding="10dp"
    android:id="@+id/notifyLayout"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroud_patch"
        android:elevation="2dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Notify User "
        android:textColor="@color/darkish"
        android:textSize="20dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:padding="5dp">

        <Button
            android:id="@+id/toast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Toast"
            android:textSize="15dp"
            android:textColor="@color/darkish"
            android:padding="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/background_button_patch">
        </Button>
        <Button
            android:id="@+id/snakbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SnakBar"
            android:textSize="15dp"
            android:textColor="@color/darkish"
            android:padding="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/background_button_patch">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dialog"
            android:textSize="15dp"
            android:textColor="@color/darkish"
            android:padding="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/background_button_patch">
        </Button>
        <Button
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Data Picker"
            android:textColor="@color/darkish"
            android:textSize="15dp"
            android:padding="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/background_button_patch">
        </Button>
    </LinearLayout>

</LinearLayout>